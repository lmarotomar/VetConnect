# WhatsApp Business API
WHATSAPP_API_KEY=your_whatsapp_api_key_here
WHATSAPP_PHONE_ID=your_phone_id_here
WHATSAPP_BUSINESS_ID=your_business_id_here

# Twilio
TWILIO_ACCOUNT_SID=your_twilio_account_sid
TWILIO_AUTH_TOKEN=your_twilio_auth_token
TWILIO_PHONE_NUMBER=+1234567890

# SendGrid
SENDGRID_API_KEY=your_sendgrid_api_key
SENDGRID_FROM_EMAIL=noreply@yourvetclinic.com
SENDGRID_FROM_NAME=Your Vet Clinic

# HubSpot CRM
HUBSPOT_API_KEY=your_hubspot_api_key
HUBSPOT_PORTAL_ID=your_portal_id

# Google Cloud
GOOGLE_CLIENT_ID=your_google_client_id
GOOGLE_CLIENT_SECRET=your_google_client_secret
GOOGLE_CALENDAR_ID=your_calendar_id@group.calendar.google.com
GOOGLE_SHEETS_ID=your_google_sheet_id

# Database (Production)
DATABASE_URL=postgresql://user:password@localhost:5432/vetflow
# or for SQLite
DATABASE_PATH=./data/vetflow.db

# Server Configuration
PORT=3000
NODE_ENV=development
JWT_SECRET=your_secret_key_for_jwt_tokens

# Application Settings
CLINIC_NAME=Your Veterinary Clinic
CLINIC_PHONE=+1234567890
CLINIC_EMAIL=contact@yourvetclinic.com
CLINIC_ADDRESS=123 Main Street, City, Country

# Automation Settings
ENABLE_AUTO_CONFIRMATIONS=true
ENABLE_AUTO_REMINDERS=true
ENABLE_AUTO_FOLLOWUPS=true
REMINDER_24H_ENABLED=true
REMINDER_2H_ENABLED=true
FOLLOWUP_3D_ENABLED=true
FOLLOWUP_7D_ENABLED=true
FOLLOWUP_30D_ENABLED=true
